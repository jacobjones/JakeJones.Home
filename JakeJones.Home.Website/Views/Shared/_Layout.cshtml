<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>Jake Jones: @ViewData["Title"]</title>

	<environment include="Development">
		<link rel="stylesheet" href="~/css/all.css" />
	</environment>
	<environment exclude="Development">
		<link rel="stylesheet" href="~/css/all.min.css" asp-append-version="true" />
	</environment>
	
	<link rel="stylesheet" href="~/lib/prism/prism.css" />

	@RenderSection("Head", required: false)
</head>
<body class="@ViewData["BodyClass"]">
	
	<ul class="menu">
		<li class="menu__item menu__item--primary"><a class="menu__link" asp-area="" asp-controller="Home" asp-action="Index">jakejon.es</a></li>
		<li class="menu__item"><a class="menu__link" asp-area="" asp-controller="Blog" asp-action="Index" asp-route-page="">Blog</a></li>
		<li class="menu__item"><a class="menu__link" asp-area="" asp-controller="Home" asp-action="About">About</a></li>
		<li class="menu__item menu__item--search"><input id="search-input" class="menu__search" type="text" name="firstname" placeholder="Search"></li>
	</ul>

	<main role="main">
		@RenderBody()
	</main>

	<environment include="Development">
		<script src="~/js/all.js" asp-append-version="true"></script>
	</environment>
	<environment exclude="Development">
		<script src="~/js/all.min.js" asp-append-version="true"></script>
	</environment>
	
	<script src="~/lib/prism/prism.js"></script>


	@RenderSection("Scripts", required: false)
</body>
</html>
